<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <parent>
      <groupId>org.exoplatform.comet</groupId>
      <artifactId>comet-parent</artifactId>
      <version>2.1.0_gtn_Alpha01</version>
   </parent>
   <modelVersion>4.0.0</modelVersion>
   <artifactId>exo-comet-ext-webapp-rest</artifactId>
   <packaging>war</packaging>
   <name>eXo Comet :: REST WebApp (use for test only)</name>
   <url>http://www.exoplatform.org</url>
   <description>ext REST web application for test</description>
   <dependencies>
      <dependency>
         <groupId>org.exoplatform.ws</groupId>
         <artifactId>exo.ws.frameworks.servlet</artifactId>
         <scope>provided</scope>
      </dependency>
   </dependencies>
   <build>
      <finalName>rest</finalName>
      <plugins>
         <plugin>
            <artifactId>maven-war-plugin</artifactId>
            <configuration>
               <!-- This is broken in maven-war-plugin 2.0, works in 2.0.1 -->
               <warSourceExcludes>WEB-INF/lib/*.jar</warSourceExcludes>
               <archive>
                  <manifest>
                     <addClasspath>false</addClasspath>
                     <classpathPrefix>lib/</classpathPrefix>
                  </manifest>
               </archive>
            </configuration>
         </plugin>
      </plugins>
   </build>
</project>
