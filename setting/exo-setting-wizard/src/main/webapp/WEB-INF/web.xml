<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>exo-settings-wizard</display-name>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>wizardServiceImpl</servlet-name>
    <servlet-class>org.exoplatform.setting.server.service.WizardServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>wizardServiceImpl</servlet-name>
    <url-pattern>/wizard/wizardsrv</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>wizard.html</welcome-file>
  </welcome-file-list>

</web-app>
