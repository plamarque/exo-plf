<?xml version="1.0" encoding="UTF-8"?>
<portlet-app version="1.0"
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

	<portlet>
		<description xml:lang="EN">Construction Portlet</description>
		<portlet-name>ConstructionPortlet</portlet-name>
		<display-name xml:lang="EN">Construction Portlet</display-name>
		<portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>
		<init-param>
			<name>webui.configuration</name>
			<!-- must match the path to configuration file -->
			<value>/WEB-INF/conf/portlet/constructionPortlet/configuration.xml</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>help</portlet-mode>
		</supports>
		<supported-locale>en</supported-locale>
		<resource-bundle>locale.portlet.constructionPortlet</resource-bundle>
		<portlet-info>
			<title>ConstructionPortlet</title>
			<short-title>ConstructionPortlet</short-title>
		</portlet-info>
	</portlet>

</portlet-app>