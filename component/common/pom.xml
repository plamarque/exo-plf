<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.exoplatform.platform</groupId>
    <artifactId>exo.platform.component</artifactId>
    <version>3.5.0-M2-SNAPSHOT</version>
  </parent>
  <artifactId>exo.platform.component.common</artifactId>
  <packaging>jar</packaging>
  <name>eXo Platform - Common</name>
  <dependencies>
    <dependency>
      <groupId>org.exoplatform.kernel</groupId>
      <artifactId>exo.kernel.container</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.exoplatform.portal</groupId>
      <artifactId>exo.portal.component.web.api</artifactId>
      <version>${org.exoplatform.portal.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>javax.portlet</groupId>
      <artifactId>portlet-api</artifactId>
      <version>2.0</version>
      <scope>provided</scope>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <version>${org.slf4j.version}</version>
      <scope>runtime</scope>
    </dependency>
  </dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.6</version>
				<executions>
					<execution>
						<id>compile</id>
						<phase>initialize</phase>
						<configuration>
							<target>
								<!-- defines the needed properties -->
								<property name="platform.version" value="${project.version}" />
								<tstamp>
									<format property="platform.buildtime" pattern="yyyyMMdd" />
								</tstamp>
								<property name="platform.buildtime" value="${maven.build.timestamp}" />
								<loadfile property="platform.revision" srcFile="../../.svn/entries"><!-- should point to the project main POM-->
									<filterchain>
									<headfilter lines="1" skip="3"/>
									<deletecharacters chars="\n"/>
									</filterchain>
								</loadfile>			
								<property name="packagePath" value="src/main/java/org/exoplatform/commons/platform/info/impl"/>
								<property name="packageName" value="org.exoplatform.commons.platform.info.impl"/>
								<property name="importStatement" value="org.exoplatform.commons.platform.info.PlatformInfo"/>
								<property name="className" value="PlatformInfoImpl"/>
								<property name="fileName" value="${className}.java"/>
								<!-- generates the class -->
								<echo file="${basedir}/${packagePath}/${fileName}" message="package ${packageName};${line.separator}" />
								<echo file="${basedir}/${packagePath}/${fileName}" append="true" message="import ${importStatement};${line.separator}" />
								<echo file="${basedir}/${packagePath}/${fileName}" append="true" message="public final class ${className} implements PlatformInfo {${line.separator}" />
								<echo file="${basedir}/${packagePath}/${fileName}" append="true" message=" public String getVersion() { return &quot;${platform.version}&quot; ;}${line.separator}" />
								<echo file="${basedir}/${packagePath}/${fileName}" append="true" message=" public String getBuildNumber() { return &quot;${platform.buildtime}&quot; ;}${line.separator}" />
								<echo file="${basedir}/${packagePath}/${fileName}" append="true" message=" public String getRevision() { return &quot;${platform.revision}&quot; ;}${line.separator}" />
								<echo file="${basedir}/${packagePath}/${fileName}" append="true" message="}${line.separator}" />
							</target>
						</configuration>
						<goals>
						  <goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
