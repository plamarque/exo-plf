<repository-service default-repository="${tenant.repository.name}">
  <repositories>
    <repository name="${tenant.repository.name}" system-workspace="system" default-workspace="portal-system">
      <security-domain>gatein-domain</security-domain>
      <access-control>optional</access-control>
      <authentication-policy>org.exoplatform.services.jcr.impl.core.access.JAASAuthenticator</authentication-policy>

      <!-- System -->
      <workspaces>
        <workspace name="system">
          <container class="org.exoplatform.services.jcr.impl.storage.jdbc.optimisation.CQJDBCWorkspaceDataContainer">
            <properties>
              <property name="source-name" value="${tenant.repository.name}"/>
              <property name="dialect" value="${gatein.jcr.datasource.dialect}"/>
              <property name="multi-db" value="false"/>
              <property name="update-storage" value="true"/>
              <property name="max-buffer-size" value="200k"/>
              <property name="swap-directory" value="${gatein.jcr.data.dir}/swap/${tenant.repository.name}/system${container.name.suffix}"/>
            </properties>
            <value-storages>
              <value-storage id="system" class="org.exoplatform.services.jcr.impl.storage.value.fs.TreeFileValueStorage">
                <properties>
                  <property name="path" value="${gatein.jcr.storage.data.dir}/${tenant.repository.name}/system${container.name.suffix}"/>
                </properties>
                <filters>
                  <filter property-type="Binary"/>
                </filters>
              </value-storage>
            </value-storages>
          </container>
          <initializer class="org.exoplatform.services.jcr.impl.core.ScratchWorkspaceInitializer">
            <properties>
              <property name="root-nodetype" value="nt:unstructured"/>
              <property name="root-permissions" value="*:/platform/administrators read;*:/platform/administrators add_node;*:/platform/administrators set_property;*:/platform/administrators remove"/>
            </properties>
          </initializer>
               <cache enabled="true" class="org.exoplatform.services.jcr.impl.dataflow.persistent.LinkedWorkspaceStorageCacheImpl">
                  <properties>
                     <property name="max-size" value="100k" />
                     <property name="live-time" value="2h" />
                  </properties>
               </cache>
               <query-handler class="org.exoplatform.services.jcr.impl.core.query.lucene.SearchIndex">
                  <properties>
                     <property name="index-dir" value="${gatein.jcr.index.data.dir}/${tenant.repository.name}/system${container.name.suffix}" />
                  </properties>
               </query-handler>
               <lock-manager>
                  <time-out>15m</time-out>
                  <persister class="org.exoplatform.services.jcr.impl.core.lock.FileSystemLockPersister">
                     <properties>
                        <property name="path" value="${gatein.jcr.data.dir}/lock/${tenant.repository.name}/system${container.name.suffix}" />
                     </properties>
                  </persister>
               </lock-manager>
        </workspace>

        <!-- Portal system data -->
        <workspace name="portal-system">
          <container class="org.exoplatform.services.jcr.impl.storage.jdbc.optimisation.CQJDBCWorkspaceDataContainer">
            <properties>
              <property name="source-name" value="${tenant.repository.name}"/>
              <property name="dialect" value="${gatein.jcr.datasource.dialect}"/>
              <property name="multi-db" value="false"/>
              <property name="update-storage" value="true"/>
              <property name="max-buffer-size" value="200k"/>
              <property name="swap-directory" value="${gatein.jcr.data.dir}/swap/${tenant.repository.name}/portal-system${container.name.suffix}"/>
            </properties>
            <value-storages>
              <value-storage id="portal-system" class="org.exoplatform.services.jcr.impl.storage.value.fs.TreeFileValueStorage">
                <properties>
                  <property name="path" value="${gatein.jcr.storage.data.dir}/${tenant.repository.name}/portal-system${container.name.suffix}"/>
                </properties>
                <filters>
                  <filter property-type="Binary"/>
                </filters>
              </value-storage>
            </value-storages>
          </container>
          <initializer class="org.exoplatform.services.jcr.impl.core.ScratchWorkspaceInitializer">
            <properties>
              <property name="root-nodetype" value="nt:unstructured"/>
              <property name="root-permissions" value="*:/platform/administrators read;*:/platform/administrators add_node;*:/platform/administrators set_property;*:/platform/administrators remove"/>
            </properties>
          </initializer>
               <cache enabled="true" class="org.exoplatform.services.jcr.impl.dataflow.persistent.LinkedWorkspaceStorageCacheImpl">
                  <properties>
                     <property name="max-size" value="200k" />
                     <property name="live-time" value="2h" />
                  </properties>
               </cache>
               <query-handler class="org.exoplatform.services.jcr.impl.core.query.lucene.SearchIndex">
                  <properties>
                     <property name="index-dir" value="${gatein.jcr.index.data.dir}/${tenant.repository.name}/portal-system${container.name.suffix}" />
                  </properties>
               </query-handler>
               <lock-manager>
                  <time-out>15m</time-out>
                  <persister class="org.exoplatform.services.jcr.impl.core.lock.FileSystemLockPersister">
                     <properties>
                        <property name="path" value="${gatein.jcr.data.dir}/lock/${tenant.repository.name}/portal-system${container.name.suffix}" />
                     </properties>
                  </persister>
               </lock-manager>
        </workspace>

        <!-- Portal work data -->
        <workspace name="portal-work">
          <container class="org.exoplatform.services.jcr.impl.storage.jdbc.optimisation.CQJDBCWorkspaceDataContainer">
            <properties>
              <property name="source-name" value="${tenant.repository.name}"/>
              <property name="dialect" value="${gatein.jcr.datasource.dialect}"/>
              <property name="multi-db" value="false"/>
              <property name="update-storage" value="true"/>
              <property name="max-buffer-size" value="200k"/>
              <property name="swap-directory" value="${gatein.jcr.data.dir}/swap/${tenant.repository.name}/portal-work${container.name.suffix}"/>
            </properties>
            <value-storages>
              <value-storage id="portal-work" class="org.exoplatform.services.jcr.impl.storage.value.fs.TreeFileValueStorage">
                <properties>
                  <property name="path" value="${gatein.jcr.storage.data.dir}/${tenant.repository.name}/portal-work${container.name.suffix}"/>
                </properties>
                <filters>
                  <filter property-type="Binary"/>
                </filters>
              </value-storage>
            </value-storages>
          </container>
          <initializer class="org.exoplatform.services.jcr.impl.core.ScratchWorkspaceInitializer">
            <properties>
              <property name="root-nodetype" value="nt:unstructured"/>
              <property name="root-permissions" value="*:/platform/administrators read;*:/platform/administrators add_node;*:/platform/administrators set_property;*:/platform/administrators remove"/>
            </properties>
          </initializer>
               <cache enabled="true" class="org.exoplatform.services.jcr.impl.dataflow.persistent.LinkedWorkspaceStorageCacheImpl">
                  <properties>
                     <property name="max-size" value="10k" />
                     <property name="live-time" value="30m" />
                  </properties>
               </cache>
               <query-handler class="org.exoplatform.services.jcr.impl.core.query.lucene.SearchIndex">
                  <properties>
                     <property name="index-dir" value="${gatein.jcr.index.data.dir}/${tenant.repository.name}/portal-work${container.name.suffix}" />
                  </properties>
               </query-handler>
               <lock-manager>
                  <time-out>15m</time-out>
                  <persister class="org.exoplatform.services.jcr.impl.core.lock.FileSystemLockPersister">
                     <properties>
                        <property name="path" value="${gatein.jcr.data.dir}/lock/${tenant.repository.name}/portal-work${container.name.suffix}" />
                     </properties>
                  </persister>
               </lock-manager>
       </workspace>

       <!-- WSRP -->
       <workspace name="wsrp-system">
         <container class="org.exoplatform.services.jcr.impl.storage.jdbc.optimisation.CQJDBCWorkspaceDataContainer">
           <properties>
             <property name="source-name" value="${tenant.repository.name}"/>
               <property name="dialect" value="${gatein.jcr.datasource.dialect}"/>
               <property name="multi-db" value="false"/>
               <property name="update-storage" value="true"/>
               <property name="max-buffer-size" value="200k"/>
               <property name="swap-directory" value="${gatein.jcr.data.dir}/swap/${tenant.repository.name}/wsrp${container.name.suffix}"/>
             </properties>
             <value-storages>
               <value-storage id="wsrp-system"
                  class="org.exoplatform.services.jcr.impl.storage.value.fs.TreeFileValueStorage">
                 <properties>
                   <property name="path" value="${gatein.jcr.storage.data.dir}/${tenant.repository.name}/wsrp${container.name.suffix}"/>
                 </properties>
                 <filters>
                    <filter property-type="Binary"/>
                 </filters>
               </value-storage>
             </value-storages>
           </container>
           <initializer class="org.exoplatform.services.jcr.impl.core.ScratchWorkspaceInitializer">
             <properties>
               <property name="root-nodetype" value="nt:unstructured"/>
               <property name="root-permissions" value="*:/platform/administrators read;*:/platform/administrators add_node;*:/platform/administrators set_property;*:/platform/administrators remove"/>
             </properties>
           </initializer>
               <cache enabled="true" class="org.exoplatform.services.jcr.impl.dataflow.persistent.LinkedWorkspaceStorageCacheImpl">
                  <properties>
                     <property name="max-size" value="10k" />
                     <property name="live-time" value="30m" />
                  </properties>
               </cache>
               <query-handler class="org.exoplatform.services.jcr.impl.core.query.lucene.SearchIndex">
                  <properties>
                     <property name="index-dir" value="${gatein.jcr.index.data.dir}/${tenant.repository.name}/wsrp-system${container.name.suffix}" />
                  </properties>
               </query-handler>
               <lock-manager>
                  <time-out>15m</time-out>
                  <persister class="org.exoplatform.services.jcr.impl.core.lock.FileSystemLockPersister">
                     <properties>
                        <property name="path" value="${gatein.jcr.data.dir}/lock/${tenant.repository.name}/wsrp-system${container.name.suffix}" />
                     </properties>
                  </persister>
               </lock-manager>
         </workspace>

         <!-- Producer portlet states -->
         <workspace name="pc-system">
            <container class="org.exoplatform.services.jcr.impl.storage.jdbc.optimisation.CQJDBCWorkspaceDataContainer">
               <properties>
                  <property name="source-name" value="${tenant.repository.name}"/>
                  <property name="dialect" value="${gatein.jcr.datasource.dialect}"/>
                  <property name="multi-db" value="false"/>
                  <property name="update-storage" value="true"/>
                  <property name="max-buffer-size" value="200k"/>
                  <property name="swap-directory" value="${gatein.jcr.data.dir}/swap/${tenant.repository.name}/pc${container.name.suffix}"/>
               </properties>
               <value-storages>
                  <value-storage id="pc-system" class="org.exoplatform.services.jcr.impl.storage.value.fs.TreeFileValueStorage">
                     <properties>
                        <property name="path" value="${gatein.jcr.storage.data.dir}/${tenant.repository.name}/pc${container.name.suffix}"/>
                     </properties>
                     <filters>
                        <filter property-type="Binary"/>
                     </filters>
                  </value-storage>
               </value-storages>
            </container>
            <initializer class="org.exoplatform.services.jcr.impl.core.ScratchWorkspaceInitializer">
               <properties>
                  <property name="root-nodetype" value="nt:unstructured"/>
                  <property name="root-permissions" value="*:/platform/administrators read;*:/platform/administrators add_node;*:/platform/administrators set_property;*:/platform/administrators remove"/>
               </properties>
            </initializer>
               <cache enabled="true" class="org.exoplatform.services.jcr.impl.dataflow.persistent.LinkedWorkspaceStorageCacheImpl">
                  <properties>
                     <property name="max-size" value="10k" />
                     <property name="live-time" value="30m" />
                  </properties>
               </cache>
               <query-handler class="org.exoplatform.services.jcr.impl.core.query.lucene.SearchIndex">
                  <properties>
                     <property name="index-dir" value="${gatein.jcr.index.data.dir}/${tenant.repository.name}/pc-system${container.name.suffix}" />
                  </properties>
               </query-handler>
               <lock-manager>
                  <time-out>15m</time-out>
                  <persister class="org.exoplatform.services.jcr.impl.core.lock.FileSystemLockPersister">
                     <properties>
                        <property name="path" value="${gatein.jcr.data.dir}/lock/${tenant.repository.name}/pc-system${container.name.suffix}" />
                     </properties>
                  </persister>
               </lock-manager>
         </workspace>

      </workspaces>
    </repository>
  </repositories>
</repository-service>
