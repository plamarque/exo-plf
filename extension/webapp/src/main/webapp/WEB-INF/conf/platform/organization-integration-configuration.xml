	<component>
		<type>org.exoplatform.platform.component.organization.OrganizationIntegrationService</type>
		<init-params>
			<value-param>
				<name>workspace</name>
				<value>collaboration</value>
			</value-param>
			<value-param>
				<name>homePath</name>
				<value>/</value>
