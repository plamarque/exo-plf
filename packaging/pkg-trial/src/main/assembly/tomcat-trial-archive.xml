<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
   <id>tomcat-trial</id>
   <formats>
      <format>zip</format>
   </formats>
   <includeBaseDirectory>false</includeBaseDirectory>
   <fileSets>
      <!-- Default files -->
      <fileSet>
         <directory>target/tomcat-trial</directory>
         <outputDirectory>/tomcat-trial</outputDirectory>
         <excludes>
           <exclude>**/*.sh</exclude>
           <exclude>webapps/docs/</exclude>
           <exclude>webapps/examples/</exclude>
           <exclude>webapps/host-manager/</exclude>
           <exclude>webapps/manager/</exclude>
           <exclude>webapps/ROOT/</exclude>
           <exclude>conf/**/manager.xml</exclude>
           <exclude>conf/**/host-manager.xml</exclude>
         </excludes>
      </fileSet>
      <!-- Executable files-->
      <fileSet>
         <directory>target/tomcat-trial</directory>
         <outputDirectory>/tomcat-trial</outputDirectory>
         <includes>
            <include>**/*.sh</include>
         </includes>
         <fileMode>755</fileMode>
      </fileSet>
       <!-- ROOT webapp -->
     <fileSet>
        <directory>src/main/ROOT</directory>
        <outputDirectory>/tomcat-trial/webapps/ROOT</outputDirectory>
     </fileSet>
   </fileSets>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.exoplatform.platform:exo.platform.packaging.assembly:zip:chatserver</include>
      </includes>
      <outputDirectory>/exo-chatserver</outputDirectory>
      <unpack>true</unpack>
      <useDefaultExcludes>true</useDefaultExcludes>
    </dependencySet>
  </dependencySets>
</assembly>
