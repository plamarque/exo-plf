<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
   <id>tomcat</id>
   <formats>
      <format>zip</format>
   </formats>
   <includeBaseDirectory>false</includeBaseDirectory>
   <fileSets>
      <!-- Default files -->
      <fileSet>
         <directory>target/tomcat</directory>
         <outputDirectory>tomcat-bundle</outputDirectory>
         <excludes>
           <exclude>**/*.sh</exclude>
           <exclude>webapps/docs/</exclude>
           <exclude>webapps/examples/</exclude>
           <exclude>webapps/host-manager/</exclude>
           <exclude>webapps/manager/</exclude>
           <exclude>webapps/ROOT/</exclude>
         </excludes>
      </fileSet>
      <!-- Executable files-->
      <fileSet>
         <directory>target/tomcat</directory>
         <outputDirectory>tomcat-bundle</outputDirectory>
         <includes>
            <include>**/*.sh</include>
         </includes>
         <fileMode>755</fileMode>
      </fileSet>
       <!-- ROOT webapp -->
     <fileSet>
        <directory>src/main/ROOT</directory>
        <outputDirectory>tomcat-bundle/webapps/ROOT</outputDirectory>
     </fileSet>
     <!-- Chat Server -->
     <fileSet>
         <directory>target/exo-chatserver</directory>
         <outputDirectory>chat-server</outputDirectory>
         <excludes>
            <exclude>**/*.sh</exclude>
         </excludes>
      </fileSet>
      <fileSet>
         <directory>target/exo-chatserver</directory>
         <outputDirectory>chat-server</outputDirectory>
         <includes>
            <include>**/*.sh</include>
         </includes>
         <fileMode>755</fileMode>
      </fileSet>
     <!-- Commons -->
     <fileSet>
         <directory>target/commons</directory>
         <outputDirectory></outputDirectory>
      </fileSet>
   </fileSets>
</assembly>
