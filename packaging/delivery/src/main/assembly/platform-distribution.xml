<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <!-- From -->
      <directory>src/main/resources</directory>
      <!-- To -->
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <!-- Tomcat Bundle -->
    <dependencySet>
      <!-- From -->
      <includes>
        <include>org.exoplatform.platform:exo.platform.packaging.assembly:zip:tomcat</include>
      </includes>
      <!-- To -->
      <outputDirectory>/bin/tomcat6-bundle</outputDirectory>
      <!-- Options -->
      <unpack>true</unpack>
      <useDefaultExcludes>true</useDefaultExcludes>
    </dependencySet>
    <!-- Chat Server -->
    <dependencySet>
      <!-- From -->
      <includes>
        <include>org.exoplatform.platform:exo.platform.packaging.assembly:zip:chatserver</include>
      </includes>
      <!-- To -->
      <outputDirectory>/bin/chat-server</outputDirectory>
      <!-- Options -->
      <unpack>true</unpack>
      <useDefaultExcludes>true</useDefaultExcludes>
    </dependencySet>
  </dependencySets>
</assembly>
