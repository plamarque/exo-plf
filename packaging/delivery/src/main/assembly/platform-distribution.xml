<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <!-- Tomcat Bundle -->
    <dependencySet>
      <includes>
        <include>org.exoplatform.platform:exo.platform.packaging.assembly:zip:tomcat</include>
      </includes>
      <outputDirectory>/bin/tomcat6-bundle</outputDirectory>
      <unpack>true</unpack>
      <useDefaultExcludes>true</useDefaultExcludes>
    </dependencySet>
    <!-- Chat Server -->
    <dependencySet>
      <includes>
        <include>org.exoplatform.platform:exo.platform.packaging.assembly:zip:chatserver</include>
      </includes>
      <outputDirectory>/bin/chat-server</outputDirectory>
      <unpack>true</unpack>
      <useDefaultExcludes>true</useDefaultExcludes>
    </dependencySet>
    <!-- JBoss EAP EARs -->
    <dependencySet>
      <includes>
        <include>org.exoplatform.platform:exo.platform.packaging.assembly:zip:ears</include>
      </includes>
      <outputDirectory>/bin/jboss5-eap-ears</outputDirectory>
      <unpack>true</unpack>
      <useDefaultExcludes>true</useDefaultExcludes>
    </dependencySet>
    <!-- Documentation -->
    <dependencySet>
      <includes>
        <include>org.exoplatform.platform:exo.platform.doc.bundle:war</include>
      </includes>
      <outputDirectory>/docs</outputDirectory>
      <unpack>true</unpack>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>META-INF</exclude>
        <exclude>WEB-INF</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.exoplatform.platform:exo.platform.doc.bundle:war</include>
      </includes>
      <outputDirectory>/bin/tomcat6-bundle/webapps/docs</outputDirectory>
      <unpack>true</unpack>
      <useDefaultExcludes>true</useDefaultExcludes>
    </dependencySet>
  </dependencySets>
</assembly>
