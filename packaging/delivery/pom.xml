<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.exoplatform.platform</groupId>
    <artifactId>exo.platform.packaging</artifactId>
    <version>3.0.0-GA-SNAPSHOT</version>
  </parent>
  <artifactId>exo.platform.packaging.delivery</artifactId>
  <packaging>pom</packaging>
  <name>eXo Platform - Delivery</name>
  <profiles>
    <profile>
      <id>distrib</id>
      <dependencies>
        <!-- TOMCAT distribution -->
        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>exo.platform.packaging.assembly</artifactId>
          <classifier>tomcat</classifier>
          <version>${project.version}</version>
          <type>zip</type>
        </dependency>
        <!-- CHAT server -->
        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>exo.platform.packaging.assembly</artifactId>
          <classifier>chatserver</classifier>
          <version>${project.version}</version>
          <type>zip</type>
        </dependency>
        <!-- User Docs -->
        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>exo.platform.doc.user</artifactId>
          <version>${project.version}</version>
          <type>zip</type>
        </dependency>
        <!-- Admin Docs -->
        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>exo.platform.doc.admin</artifactId>
          <version>${project.version}</version>
          <classifier>html</classifier>
          <type>zip</type>
        </dependency>
        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>exo.platform.doc.admin</artifactId>
          <version>${project.version}</version>
          <type>pdf</type>
        </dependency>
        <!-- Dev Docs -->
        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>exo.platform.doc.developer</artifactId>
          <version>${project.version}</version>
          <classifier>html</classifier>
          <type>zip</type>
        </dependency>
        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>exo.platform.doc.developer</artifactId>
          <version>${project.version}</version>
          <type>pdf</type>
        </dependency>
        <!-- Ref Docs -->
        <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>exo.platform.doc.refguide</artifactId>
          <version>${project.version}</version>
          <classifier>html</classifier>
          <type>zip</type>
        </dependency>
        <!-- ecms -->
        <dependency>
          <groupId>org.exoplatform.ecms</groupId>
          <artifactId>exo-ecms-docs-refguide</artifactId>
          <version>${org.exoplatform.ecms.version}</version>
          <type>pdf</type>
        </dependency>
        <!-- cs -->
        <dependency>
          <groupId>org.exoplatform.cs</groupId>
          <artifactId>exo.cs.docs.refguide</artifactId>
          <version>${org.exoplatform.cs.version}</version>
          <type>pdf</type>
        </dependency>
        <!-- ks -->
        <dependency>
          <groupId>org.exoplatform.ks</groupId>
          <artifactId>exo.ks.docs.refguide</artifactId>
          <version>${org.exoplatform.ks.version}</version>
          <type>pdf</type>
        </dependency>
        <!-- social -->
        <dependency>
          <groupId>org.exoplatform.social</groupId>
          <artifactId>exo.social.docs.refguide</artifactId>
          <version>${org.exoplatform.social.version}</version>
          <type>pdf</type>
        </dependency>
      </dependencies>
      <build>
        <finalName>eXoPlatform-${project.version}</finalName>
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <id>distribution</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>src/main/assembly/platform-distribution.xml</descriptor>
                  </descriptors>
                  <appendAssemblyId>false</appendAssemblyId>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
