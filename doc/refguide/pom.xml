<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.exoplatform.platform</groupId>
    <artifactId>exo.platform.doc</artifactId>
    <version>3.5.0-M3-SNAPSHOT</version>
  </parent>
  <artifactId>exo.platform.doc.refguide</artifactId>
  <packaging>pom</packaging>
  <name>eXo Platform - Developers Reference</name>
  <properties>
    <org.exoplatform.doc-style.version>1</org.exoplatform.doc-style.version>
  </properties>
  <profiles>
    <profile>
      <id>distrib</id>
      <build>
        <plugins>
    <!--
    1/
     - download the ref guides of other products
     - unpack them in /target
    -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <executions>
              <execution>
                <id>unpack</id>
                <phase>generate-sources</phase>
                <goals>
                  <goal>unpack</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <!-- jcr -->
                    <artifactItem>
                          <groupId>org.exoplatform.jcr</groupId>
                          <artifactId>reference-docs-en</artifactId>
                          <version>${org.exoplatform.jcr.version}</version>
                          <type>jar</type>
                          <classifier>sources</classifier>
                          <outputDirectory>target/</outputDirectory>
                          <includes>**</includes>
                        </artifactItem>
                    <!-- gatein -->
                    <artifactItem>
                          <groupId>org.gatein.doc</groupId>
                          <artifactId>gatein-reference-guide-en</artifactId>
                          <version>${org.exoplatform.portal.version}</version>
                          <type>zip</type>
                          <outputDirectory>target/</outputDirectory>
                          <includes>**</includes>
                        </artifactItem>
                    <!-- ecms -->
                    <artifactItem>
                      <groupId>org.exoplatform.ecms</groupId>
                      <artifactId>exo-ecms-docs-refguide</artifactId>
                      <version>${org.exoplatform.ecms.version}</version>
                      <type>zip</type>
                      <outputDirectory>target/</outputDirectory>
                      <includes>**</includes>
                    </artifactItem>
                    <!-- ecms cmis admin -->
                    <artifactItem>
                      <groupId>org.exoplatform.ecms</groupId>
                      <artifactId>exo-ecms-ext-xcmis-admin-guide</artifactId>
                      <version>${org.exoplatform.ecms.version}</version>
                      <type>zip</type>
                      <outputDirectory>target/</outputDirectory>
                      <includes>**</includes>
                    </artifactItem>
                    <!-- ecms cmis developer -->
                    <artifactItem>
                      <groupId>org.exoplatform.ecms</groupId>
                      <artifactId>exo-ecms-ext-xcmis-developer-guide</artifactId>
                      <version>${org.exoplatform.ecms.version}</version>
                      <type>zip</type>
                      <outputDirectory>target/</outputDirectory>
                      <includes>**</includes>
                    </artifactItem>
                    <!-- cs -->
                    <artifactItem>
                      <groupId>org.exoplatform.cs</groupId>
                      <artifactId>exo.cs.docs.refguide</artifactId>
                      <version>${org.exoplatform.cs.version}</version>
                      <type>zip</type>
                      <outputDirectory>target/</outputDirectory>
                      <includes>**</includes>
                    </artifactItem>
                    <!-- ks -->
                    <artifactItem>
                      <groupId>org.exoplatform.ks</groupId>
                      <artifactId>exo.ks.docs.refguide</artifactId>
                      <version>${org.exoplatform.ks.version}</version>
                      <type>zip</type>
                      <outputDirectory>target/</outputDirectory>
                      <includes>**</includes>
                    </artifactItem>
                    <!-- social -->
                    <artifactItem>
                      <groupId>org.exoplatform.social</groupId>
                      <artifactId>exo.social.docs.refguide</artifactId>
                      <version>${org.exoplatform.social.version}</version>
                      <type>zip</type>
                      <outputDirectory>target/</outputDirectory>
                      <includes>**</includes>
                    </artifactItem>
                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
    <!--
    2/
     - move the xml, xsl, css and images from src/main/ to target/plf/
    -->
          <plugin>
            <artifactId>maven-resources-plugin</artifactId>
            <version>2.4.3</version>
            <executions>
              <execution>
                <id>copy-resources</id>
                <!-- here the phase you need -->
                <phase>generate-sources</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <outputDirectory>target/plf</outputDirectory>
                  <resources>
                    <resource>
                      <directory>src/main</directory>
                    </resource>
                  </resources>
                </configuration>
              </execution>
              <execution>
                <id>copy-images</id>
                <!-- here the phase you need -->
                <phase>generate-sources</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <outputDirectory>target/plf/resources/images</outputDirectory>
                  <resources>
                    <resource>
                      <directory>target/org.exoplatform.xcmis.admin/images</directory>
                    </resource>
                    <resource>
                      <directory>target/org.exoplatform.social/images</directory>
                    </resource>
                    <resource>
                      <directory>target/org.exoplatform.ecms/images</directory>
                    </resource>
                    <resource>
                      <directory>target/org.exoplatform.ks/images</directory>
                    </resource>
                  </resources>
                </configuration>
              </execution>
            </executions>
          </plugin>
    <!--
    3/
     - process all the xml files (plf + other products) from target/
     - in the end, generate the html
    -->
          <plugin>
            <groupId>org.jboss.maven.plugins</groupId>
            <artifactId>maven-jdocbook-plugin</artifactId>
            <version>2.1.1</version>
            <executions>
              <execution>
                <id>jdocbook-resources</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>resources</goal>
                </goals>
              </execution>
              <execution>
                <id>jdocbook-generate</id>
                <phase>compile</phase>
                <goals>
                  <goal>generate</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <sourceDirectory>target/plf/docbook/en-US</sourceDirectory>
              <sourceDocumentName>index.xml</sourceDocumentName>
              <cssResource>
                <directory>${pom.basedir}/target/plf/resources</directory>
                <includes>
                  <include>css/**</include>
                </includes>
              </cssResource>
              <imageResource>
                <directory>${pom.basedir}/target/plf/resources</directory>
                <includes>
                  <include>background/**</include>
                  <include>images/**</include>
                </includes>
              </imageResource>
              <formats>
                <format>
                  <formatName>html</formatName>
                  <stylesheetResource>file:${basedir}/target/plf/resources/xsl/xhtml.xsl</stylesheetResource>
                  <finalName>index.html</finalName>
                </format>
              </formats>
              <!--format>
                         <formatName>html_single</formatName>
                         <stylesheetResource>classpath:/xslt/org/exojcr/xhtml-single.xsl</stylesheetResource>
                         <finalName>index.html</finalName>
                      </format-->
              <!--format>
                         <formatName>pdf</formatName>
                         <stylesheetResource>classpath://xslt/org/exojcr/pdf.xsl</stylesheetResource>
                         <finalName>index.pdf</finalName>
                      </format-->
              <!-- format>
                         <formatName>eclipse</formatName>
                         <stylesheetResource>classpath:/xslt/org/exojcr/eclipse.xsl</stylesheetResource>
                         <finalName>index.html</finalName>
                      </format -->
              <options>
                <xincludeSupported>true</xincludeSupported>
                <xmlTransformerType>saxon</xmlTransformerType>
                <!-- needed for uri-resolvers; can be ommitted if using 'current' uri scheme -->
                <!--     could also locate the docbook dependency and inspect its version... -->
                <docbookVersion>1.74.0</docbookVersion>
              </options>
            </configuration>
            <extensions>true</extensions>
            <dependencies>
              <dependency>
                <groupId>org.exoplatform.doc</groupId>
                <artifactId>exo-docbook-xslt</artifactId>
                <version>${org.exoplatform.doc-style.version}</version>
              </dependency>
              <dependency>
                <groupId>org.exoplatform.doc</groupId>
                <artifactId>exo-jdocbook-style</artifactId>
                <version>${org.exoplatform.doc-style.version}</version>
                <type>jdocbook-style</type>
              </dependency>
            </dependencies>
          </plugin>
          
          <!-- Attach the HTML zip -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>src/main/assembly/docs-archive.xml</descriptor>
                  </descriptors>
                  <appendAssemblyId>false</appendAssemblyId>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
