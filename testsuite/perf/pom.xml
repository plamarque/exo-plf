<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.exoplatform</groupId>
    <artifactId>automated-plf-ks-perftest</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Automated Test Runner and Performance Reports for PLF-KS</name>
    <description>Automated Test Runner and Performance Reports for PLF-KS</description>

    <parent>
        <groupId>org.exoplatform</groupId>
        <artifactId>exo.parent</artifactId>
        <version>8</version>
    </parent>
	<properties>
	    <!--  JMeter scenario file (shouldn't be overrided from the outside) -->
	    <jmeter-version>2.4</jmeter-version>
	    <jmeter-plugins-version>0.3.0</jmeter-plugins-version>
	    <jmeter.home>${project.build.directory}/jakarta-jmeter-${jmeter-version}</jmeter.home>
	    <history.directory>${project.build.directory}/history/${project.version}-${java.specification.version}-${dataset.version}</history.directory>
	    <test-connect-timeout>150000</test-connect-timeout>
	    <test-host>localhost</test-host>
	    <test-port>8080</test-port>
	    <test-duration>300</test-duration>
	    <test-loop-count>150000</test-loop-count>
	    <test-org-or-admin>administration</test-org-or-admin>
	    <test-rampup>1</test-rampup>
	    <test-report-file-prefix>${basedir}/target/${scenario.file.name}-${__time(MMddHHmm)}</test-report-file-prefix>
	    <test-response-timeout>500000</test-response-timeout>
	    <test-think-time>3000</test-think-time>
	</properties>

   <profiles>
    <profile>
      <id>PLF_PERF_04_SocialRead-3.0.x</id>
      <properties>
	    <scenario.file.name>PLF_PERF_04_SocialRead-3.0.x.jmx</scenario.file.name>
      </properties>
    </profile>  
    <profile>
      <id>PLF_PERF_01_3-0-1-SNP_AllScenarios-simplified</id>
      <properties>
	    <scenario.file.name>PLF_PERF_01_3-0-1-SNP_AllScenarios-simplified.jmx</scenario.file.name>
      </properties>
    </profile>
    <profile>
      <id>PLF_PERF_02_Social-3.0.2-simplified</id>
      <properties>
	    <scenario.file.name>PLF_PERF_02_Social-3.0.2-simplified.jmx</scenario.file.name>
      </properties>
    </profile>
  </profiles>
  
  <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.1</version>
                <executions>
                    <execution>
                        <id>unpack-jmeter</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.apache.jmeter</groupId>
                                    <artifactId>jmeter</artifactId>
                                    <version>${jmeter-version}</version>
                                    <type>zip</type>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-jmeter-plugin</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.apache.jmeter</groupId>
                                    <artifactId>jmeter-plugins</artifactId>
                                    <version>${jmeter-plugins-version}</version>
                                    <type>zip</type>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/jakarta-jmeter-${jmeter-version}/lib/ext/</outputDirectory>
                            <includes>JMeterPlugins.jar</includes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>unpack-jmeter-plugin-agents</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.apache.jmeter</groupId>
                                    <artifactId>jmeter-plugins</artifactId>
                                    <version>${jmeter-plugins-version}</version>
                                    <type>zip</type>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}/jakarta-jmeter-${jmeter-version}/bin</outputDirectory>
                            <includes>serverAgent/*.*</includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>chronos-maven-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <configuration>
                    <jmeterhome>${jmeter.home}</jmeterhome>
                    <historydir>${history.directory}</historydir>
                    <options>
                        <value>-XX:+UseParallelGC</value>
                        <value>-XX:+UseParallelOldGC</value>
                    </options>
                    <heap>756m</heap>
                    <newsize>256m</newsize>
                    <permsize>192m</permsize>
                    <survivorratio>8</survivorratio>
                </configuration>
                <executions>
                    <execution>
                        <id>PLF_PERF_01_3-0-1-SNP_AllScenarios-002-test</id>
                        <configuration>
                            <dataid>PLF_PERF_01_3-0-1-SNP_AllScenarios-002</dataid>
                            <input>${basedir}/src/test/jmeter/${scenario.file.name}</input>
                            <sysproperties>
                                <property><name>expThreadCount</name><value>2</value></property>
                                <property><name>expDuration</name><value>${test-duration}</value></property>
                                <property><name>expHost</name><value>${test-host}</value></property>
                                <property><name>expLoopCount</name><value>${test-loop-count}</value></property>
                                <property><name>expPort</name><value>${test-port}</value></property>
                                <property><name>expOrgOrAdmin</name><value>${test-org-or-admin}</value></property>
                                <property><name>expReportFilePrefix</name><value>${test-report-file-prefix}</value></property>
                                <property><name>expResponseTimeOut</name><value>${test-response-timeout}</value></property>
                                <property><name>expThinkTime</name><value>${test-think-time}</value></property>
                                <property><name>expConnectTimeOut</name><value>${test-connect-timeout}</value></property>
                            </sysproperties>
                        </configuration>
                        <goals>
                            <goal>jmeter</goal>
                            <goal>check</goal>
                            <goal>savehistory</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>PLF_PERF_01_3-0-1-SNP_AllScenarios-005-test</id>
                        <configuration>
                            <dataid>PLF_PERF_01_3-0-1-SNP_AllScenarios-005</dataid>
                            <input>${basedir}/src/test/jmeter/${scenario.file.name}</input>
                            <sysproperties>
                                <property><name>expThreadCount</name><value>5</value></property>
                                <property><name>expDuration</name><value>${test-duration}</value></property>
                                <property><name>expHost</name><value>${test-host}</value></property>
                                <property><name>expLoopCount</name><value>${test-loop-count}</value></property>
                                <property><name>expPort</name><value>${test-port}</value></property>
                                <property><name>expOrgOrAdmin</name><value>${test-org-or-admin}</value></property>
                                <property><name>expReportFilePrefix</name><value>${test-report-file-prefix}</value></property>
                                <property><name>expResponseTimeOut</name><value>${test-response-timeout}</value></property>
                                <property><name>expThinkTime</name><value>${test-think-time}</value></property>
                                <property><name>expConnectTimeOut</name><value>${test-connect-timeout}</value></property>
                            </sysproperties>
                        </configuration>
                        <goals>
                            <goal>jmeter</goal>
                            <goal>check</goal>
                            <goal>savehistory</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>PLF_PERF_01_3-0-1-SNP_AllScenarios-010-test</id>
                        <configuration>
                            <dataid>PLF_PERF_01_3-0-1-SNP_AllScenarios-010</dataid>
                            <input>${basedir}/src/test/jmeter/${scenario.file.name}</input>
                            <sysproperties>
                                <property><name>expThreadCount</name><value>10</value></property>
                                <property><name>expDuration</name><value>${test-duration}</value></property>
                                <property><name>expHost</name><value>${test-host}</value></property>
                                <property><name>expLoopCount</name><value>${test-loop-count}</value></property>
                                <property><name>expPort</name><value>${test-port}</value></property>
                                <property><name>expOrgOrAdmin</name><value>${test-org-or-admin}</value></property>
                                <property><name>expReportFilePrefix</name><value>${test-report-file-prefix}</value></property>
                                <property><name>expResponseTimeOut</name><value>${test-response-timeout}</value></property>
                                <property><name>expThinkTime</name><value>${test-think-time}</value></property>
                                <property><name>expConnectTimeOut</name><value>${test-connect-timeout}</value></property>
                            </sysproperties>
                        </configuration>
                        <goals>
                            <goal>jmeter</goal>
                            <goal>check</goal>
                            <goal>savehistory</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>PLF_PERF_01_3-0-1-SNP_AllScenarios-020-test</id>
                        <configuration>
                            <dataid>PLF_PERF_01_3-0-1-SNP_AllScenarios-020</dataid>
                            <input>${basedir}/src/test/jmeter/${scenario.file.name}</input>
                            <sysproperties>
                                <property><name>expThreadCount</name><value>20</value></property>
                                <property><name>expDuration</name><value>${test-duration}</value></property>
                                <property><name>expHost</name><value>${test-host}</value></property>
                                <property><name>expLoopCount</name><value>${test-loop-count}</value></property>
                                <property><name>expPort</name><value>${test-port}</value></property>
                                <property><name>expOrgOrAdmin</name><value>${test-org-or-admin}</value></property>
                                <property><name>expReportFilePrefix</name><value>${test-report-file-prefix}</value></property>
                                <property><name>expResponseTimeOut</name><value>${test-response-timeout}</value></property>
                                <property><name>expThinkTime</name><value>${test-think-time}</value></property>
                                <property><name>expConnectTimeOut</name><value>${test-connect-timeout}</value></property>
                            </sysproperties>
                        </configuration>
                        <goals>
                            <goal>jmeter</goal>
                            <goal>check</goal>
                            <goal>savehistory</goal>
                        </goals>
                    </execution>

                </executions>
            </plugin>
        </plugins>
    </build>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>chronos-maven-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
                <configuration>
                    <historydir>${history.directory}</historydir>
                </configuration>
                <reportSets>
                    <reportSet>
                        <id>PLF_PERF_01_3-0-1-SNP_AllScenarios-002-report</id>
                        <configuration>
                            <dataid>PLF_PERF_01_3-0-1-SNP_AllScenarios-002</dataid>
                            <reportid>jmeter-PLF_PERF_01_3-0-1-SNP_AllScenarios-002-report</reportid>
                            <title>PLF_PERF_01_3-0-1-SNP 02 concurrents users Test Report</title>
                            <description>PLF_PERF_01_3-0-1-SNP 02 concurrents users Test Report</description>
                        </configuration>
                        <reports>
                            <report>report</report>
                            <report>historyreport</report>
                        </reports>
                    </reportSet>
                    <reportSet>
                        <id>PLF_PERF_01_3-0-1-SNP_AllScenarios-005-report</id>
                        <configuration>
                            <dataid>PLF_PERF_01_3-0-1-SNP_AllScenarios-005</dataid>
                            <reportid>jmeter-PLF_PERF_01_3-0-1-SNP_AllScenarios-005-report</reportid>
                            <title>PLF_PERF_01_3-0-1-SNP 05 concurrents users Test Report</title>
                            <description>PLF_PERF_01_3-0-1-SNP 05 concurrents users Test Report</description>
                        </configuration>
                        <reports>
                            <report>report</report>
                            <report>historyreport</report>
                        </reports>
                    </reportSet>
                
                    <reportSet>
                        <id>PLF_PERF_01_3-0-1-SNP_AllScenarios-010-report</id>
                        <configuration>
                            <dataid>PLF_PERF_01_3-0-1-SNP_AllScenarios-010</dataid>
                            <reportid>jmeter-PLF_PERF_01_3-0-1-SNP_AllScenarios-010-report</reportid>
                            <title>PLF_PERF_01_3-0-1-SNP 10 concurrents users Test Report</title>
                            <description>PLF_PERF_01_3-0-1-SNP 10 concurrents users Test Report</description>
                        </configuration>
                        <reports>
                            <report>report</report>
                            <report>historyreport</report>
                        </reports>
                    </reportSet>
                    <reportSet>
                        <id>PLF_PERF_01_3-0-1-SNP_AllScenarios-020-report</id>
                        <configuration>
                            <dataid>PLF_PERF_01_3-0-1-SNP_AllScenarios-020</dataid>
                            <reportid>jmeter-PLF_PERF_01_3-0-1-SNP_AllScenarios-020-report</reportid>
                            <title>PLF_PERF_01_3-0-1-SNP 20 concurrents users Test Report</title>
                            <description>PLF_PERF_01_3-0-1-SNP 20 concurrents users Test Report</description>
                        </configuration>
                        <reports>
                            <report>report</report>
                            <report>historyreport</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>
</project>
