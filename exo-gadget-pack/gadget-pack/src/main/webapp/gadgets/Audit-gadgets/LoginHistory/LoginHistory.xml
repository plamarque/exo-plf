										renderer: $.jqplot.CategoryAxisRenderer,
										ticks: ticks,
										tickOptions: { 
	//											formatString: '%d',
										} 										
								},
								yaxis: {
										min: 0,
	//										tickInterval: 1,
										tickOptions: { 
