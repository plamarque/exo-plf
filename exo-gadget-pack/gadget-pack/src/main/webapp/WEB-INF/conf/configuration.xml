<configuration
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
   xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <!-- GROOVY REST SERVICES -->
  <component>
    <type>org.exoplatform.platform.gadget.services.GroovyScript2RestLoader.GroovyScript2RestLoaderExt</type>
    <component-plugins>
        <component-plugin>
          <name>test</name>
          <set-method>addPlugin</set-method>
          <type>org.exoplatform.services.jcr.ext.script.groovy.GroovyScript2RestLoaderPlugin</type>
          <init-params>
            <value-param>
              <name>workspace</name>
              <value>portal-system</value>
            </value-param>
            <value-param>
              <name>node</name>
              <value>/exo:gadget-groovy</value>
            </value-param>
            
            <properties-param>
              <name>Monitoring.groovy</name>
              <property name="autoload" value="true" />
              <property name="path" value="war:/groovy/Monitoring/Monitoring.groovy" />
            </properties-param>
        
            <properties-param>
              <name>Statistics.groovy</name>
              <property name="autoload" value="true" />
              <property name="path" value="war:/groovy/Statistics/Statistics.groovy" />
            </properties-param>
        
            <properties-param>
              <name>calgad.groovy</name>
              <property name="autoload" value="true" />
              <property name="path" value="war:/groovy/eXoCalendar/calgad.groovy" />
            </properties-param>
        
            <properties-param>
              <name>Suggestion.groovy</name>
              <property name="autoload" value="true" />
              <property name="path" value="war:/groovy/FriendSuggestion/Suggestion.groovy" />
            </properties-param>
        
          </init-params>
        </component-plugin>
    </component-plugins>
    <init-params>
       <object-param>
          <name>observation.config</name>
          <object type="org.exoplatform.services.jcr.ext.script.groovy.ObservationListenerConfiguration">
             <field name="workspaces">
                <collection type="java.util.ArrayList">
                   <value>
                      <string>portal-system</string>
                   </value>
                </collection>
             </field>
          </object>
       </object-param>
    </init-params>
  </component>
   
  <!-- LOGIN HISTORY -->
  <external-component-plugins>
    <target-component>org.exoplatform.platform.gadget.services.LoginHistory.LoginHistoryService</target-component>
    <component-plugin>
      <name>LoginHistoryService.addConfiguration</name>
      <set-method>addConfiguration</set-method>
      <type>org.exoplatform.platform.gadget.services.LoginHistory.LoginHistoryPlugin</type>
      <description>Configure login history statistic limits (0 means unlimited)</description>
      <priority>50</priority>
      <init-params>
        <value-param>
          <name>MaxNumOfUserLoginHistoryEntries</name>
          <value>0</value>
        </value-param>
        <value-param>
          <name>DaysForKeepingUserStatistic</name>
          <value>0</value>
        </value-param>
        <value-param>
          <name>DaysForKeepingGlobalStatistic</name>
          <value>0</value>
        </value-param>   
      </init-params>
    </component-plugin>
  </external-component-plugins> 
  

  <!-- LISTENERS -->
  <external-component-plugins>
    <target-component>org.exoplatform.services.listener.ListenerService</target-component>
    <component-plugin>
      <name>exo.core.security.ConversationRegistry.register</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.platform.gadget.services.LoginHistory.LoginHistoryListener</type>
      <description>Listener for user login event</description>
    </component-plugin>
  </external-component-plugins>

   
  <!-- JOBS --> 
  <external-component-plugins>
    <target-component>org.exoplatform.services.scheduler.JobSchedulerService</target-component>
    <component-plugin>
      <name>ForumsWeeklyStatisticJob</name>
      <set-method>addPeriodJob</set-method>
      <type>org.exoplatform.services.scheduler.PeriodJob</type>
      <description>add a ForumsWeeklyStatisticJob job to the JobSchedulerService</description>
      <init-params>
        <properties-param>
          <name>job.info</name>
          <description>save the Forums Weekly Statistic data  periodically</description>
          <property name="jobName" value="periodically"/>
          <property name="groupName" value="KnowlegedSuite"/>
          <property name="job" value="org.exoplatform.platform.gadget.services.ForumStatistics.ForumsWeeklyStatisticJob"/>
          <property name="repeatCount" value="0"/>
          <property name="period" value="43200000"/> <!--12 hours-->    
          <property name="startTime" value="+0"/>
          <property name="endTime" value=""/>               
        </properties-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>
