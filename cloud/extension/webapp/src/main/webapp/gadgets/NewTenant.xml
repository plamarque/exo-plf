<?xml version="1.0" encoding="UTF-8" ?>

<Module>
	<ModulePrefs author="eXoPlatform"
		title="New Tenant"
		directory_title="New Tenant"
		title_url="http://www.exoplatform.org"
		description="New Tenant"
		>
        <Require feature="opensocial-0.8" />
         <Require feature="dynamic-height"/>
	</ModulePrefs>
	<Content type="html">
	<![CDATA[
                
		<script type="text/javascript" src="/cloud-extension/javascript/script.js"></script>
		<link type="text/css" href="skin/style.css" rel="stylesheet">
                <link type="text/css" href="skin/tab.css" rel="stylesheet">
				
                      <body onLoad="tenants.init();">
			<div class="UIGadgetThemes">
                          <div id="more_spaces">
                           <div class="TitGad">
                            <div class="ContTit">New Tenant</div>
                           </div>
                          </div>
                          <div id="myspaces_id" class="GadCont MySpace">
                                 <div id="tenantsForm" >
                                    <form name="createForm" action="javascript:void(0);"  id="createForm">
                                     <table border='0'>
                                         <tbody>
                                       <tr>
                                           <td colspan="2" align="center" class="TenantFormHeadRow">Fill the form to start tenant creation:</td>
                                        </tr>
                                       <tr>
                                         <td class="TenantFormRow">Email:</td>
                                         <td><label for="t_email">Email: </label><input type="text" id="t_email" size="22"/></td>
                                       </tr>
                                       <tr>                          
                                          <td class="TenantFormRow">Tenant name :</td>
       				          <td><label for="t_name">Tenant name: </label><input type="text" id="t_name" size="22"/></td>
                                       </tr>
                                        <tr>
                                           <td colspan="2" align="center"><input type="Submit" id="t_submit" name="t_submit" value="Create" onClick="tenants.doCreationRequest();"></td>
                                        </tr>
                                       </tbody>
                                     </table>
				    </form>
				  <br>
                                </div>
                                <div id="messageString" class="TenantFormMsg"></div>
			    </div>
	               </div>
                    </body>
	]]>
	</Content>
</Module>

 
