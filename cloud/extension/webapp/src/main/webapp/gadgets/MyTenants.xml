<?xml version="1.0" encoding="UTF-8" ?>

<Module>
	<ModulePrefs author="eXoPlatform"
		title="My Tenants"
		directory_title="My Tenants"
		title_url="http://www.exoplatform.org"
		description="My Tenants"
		>
        <Require feature="opensocial-0.8" />
         <Require feature="dynamic-height"/>
	</ModulePrefs>
	<Content type="html">
	<![CDATA[
                
		<script type="text/javascript" src="/cloud-extension/javascript/script.js"></script>
		<link type="text/css" href="skin/style.css" rel="stylesheet">
                <link type="text/css" href="skin/tab.css" rel="stylesheet">
				
                      <body onLoad="tenants.init();">
			<div class="UIGadgetThemes">
                          <div id="more_spaces">
                           <div class="TitGad">
                            <a href="#" class="IconDropDown" id="ShowAll" onClick="tenants.getList();">Show all</a>
                            <div class="ContTit">My Tenants</div>
                           </div>
                          </div>
                          <div id="myspaces_id" class="GadCont MySpace">
			      <div id="tenantsMenu" style="text-align: left; width: 100%; height: 40px;">
				<table border='0' align="center" id="TenantsMenu" class="TenantsMenu" align="left">
                                    <tbody>
                                       <tr>
                                         <td><div class="tabMiddleLeftInner"></div><div class="tabMiddleCenterInner" align="center" onClick="tenants.displayForm();"><div style="height:3px"></div>Create new</div><div class="tabMiddleRightInner"></div></td>
                                         <td><div class="tabMiddleLeftInner"></div><div class="tabMiddleCenterInner" align="center" onClick="tenants.displayIdForm();"><div style="height:3px"></div>Confirm ID</div><div class="tabMiddleRightInner"></div></td>
                                         <td><div class="tabMiddleLeftInner"></div><div class="tabMiddleCenterInner" align="center" onClick="tenants.getList();"><div style="height:3px"></div>Show All</div><div class="tabMiddleRightInner"></div></td>
                                       </tr>
                                </table><br/><br/>
                                 <hr>
				</div>
                               
                                 <div id="tenantsForm" >
                                    <form name="createForm" action="javascript:void(0);"  id="createForm">
                                     <table border='0'>
                                         <tbody>
                                       <tr>
                                           <td colspan="2" align="center" class="TenantFormHeadRow">Fill the form to start tenant creation:</td>
                                        </tr>
                                       <tr>
                                         <td class="TenantFormRow"><label for="t_email">Email:</label></td>
                                         <td><input type="text" id="t_email" size="22"/></td>
                                       </tr>
                                       <tr>                          
                                          <td class="TenantFormRow"><label for="t_name">Tenant name : </label></td>
       				          <td><input type="text" id="t_name" size="22"/></td>
                                       </tr>
                                        <tr>
                                           <td colspan="2" align="center"><input type="Submit" id="t_submit" name="t_submit" value="Create" onClick="tenants.doCreationRequest();"></td>
                                        </tr>
                                       </tbody>
                                     </table>
				    </form>
				  <br>
                                </div>

                                 <div id="idForm" style="display:none">
                                    <form name="createIdForm" action="javascript:void(0);"  id="createIdForm">
                                     <table border='0'>
                                      <tbody>
                                         <tr>
                                           <td colspan="2" align="center" class="TenantFormHeadRow">Enter the confirmation ID you received in email:</td>
                                        </tr>
                                       <tr>
                                         <td class="TenantFormRow">ID:</td>
                                         <td><label for="t_id">ID: </label><input type="text" id="t_id" size="28"/></td>
                                       </tr>
                                        <tr>
                                           <td colspan="2" align="center"><input type="Submit" id="t_submitId" name="t_submitId" value="Submit" onClick="tenants.doConfirmationRequest();"></td>
                                        </tr>
                                       </tbody>
                                     </table>
				    </form>
				  <br>
                                </div>

                                 <div id="credentialForm" style="display:none">
                                    <form name="createIdForm" action="javascript:void(0);"  id="createIdForm">
                                     <table border='0'>
                                      <tbody>
                                         <tr>
                                           <td colspan="2" align="center" class="TenantFormHeadRow">Please enter cloud-admin credentials:</td>
                                        </tr>
                                       <tr>
                                         <td class="TenantFormRow">Name:</td>
                                         <td><label for="t_cred_name">Name: </label><input type="text" id="t_cred_name"  size="22" value="root"/></td>
                                       </tr>
                                       <tr>
                                         <td class="TenantFormRow">Pass:</td>
                                         <td><label for="t_cred_pass">Pass: </label><input type="password" id="t_cred_pass" size="22"/></td>
                                       </tr>
                                        <tr>
                                           <td colspan="2" align="center"><input type="Submit" id="t_submitId" name="t_submitId" value="Submit" onClick="tenants.getStatus();"></td>
                                        </tr>
                                       </tbody>
                                     </table>
				    </form>
				  <br>
                                 </div>
                                <div id="list"></div>
                                <div id="messageString" class="TenantFormMsg"></div>
			    </div>
	               </div>
                    </body>
	]]>
	</Content>
</Module>

 
